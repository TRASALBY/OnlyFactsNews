<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/main"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_close_news"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="28dp"
            android:background="@drawable/ic_close" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btn_marks_news"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_margin="28dp"
            android:background="@drawable/ic_bookmarks_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:fontFamily="@font/notosans_bold"
        android:text="[더미] 드디어 시작된 전국쿠키 체육대회! 과연 라이브 챌린지에서 우승을 거머쥘 승자쿠키는 누구?"
        android:textColor="#CC000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
    <!--이 부분 프래그먼트로 교체할것!! !-->
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_news">


        <ImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/black"
            android:foreground="@drawable/gradation_w_b"
            android:src="@drawable/img_dummy_cookierun2" />

        <ImageView
            android:id="@+id/page_down"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="left|center"
            android:layout_margin="14dp"
            android:src="@drawable/ic_pagedown" />

        <ImageView
            android:id="@+id/page_up"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="right|center"
            android:layout_margin="14dp"
            android:src="@drawable/ic_pageup" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="28dp"
            android:fontFamily="@font/notosans_medium"
            android:text=" [더미] 유력 우승후보로 초코볼맛 쿠키에 맞서 테니스계의 강자 오렌지맛 쿠키,
펜싱천재 화이트초코 쿠키, 그리고 장애물 날리기의 권위쿠키인 닌자맛쿠키가 참가했습니다."
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/img_originlink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="[더미] 오븐뉴스 | 입력 2022. 04. 30. 22:35" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="[더미] 오븐뉴스 기자맛쿠키 gijacooki2@oven.run" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_originlink"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_link"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>